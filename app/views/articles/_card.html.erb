<div class="col-xs-12 col-sm-4">
  <%= link_to project_article_path(article.project, article), class: "card-link" do %>

  <% if article.photo.attached? %>
    <% background_url = cl_image_path article.photo.key, width: 400, height: 500 %>
  <% else %>
    <% background_url = 'https://source.unsplash.com/500x400/?people' %>
  <% end %>
  <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= background_url %>');">
    <div class="card-category"><i class="fa fa-usd" aria-hidden="true"></i>
      <%= article.id %></div>
    <div class="card-description">
      <h2><%= article.title %></h2>
      <p><%= link_to "Read More", project_article_path(article.project, article) %></p>
    </div>
    <% end %>
  </div>
</div>
