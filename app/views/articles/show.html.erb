<% background_url = cl_image_path @article.photo.key %>

<div class="article-create-2" style="vertical-align: top; text-align:left;">
  <div style="  margin-right:400px; margin-left:400px;">

    <div class="article-title" style="background-size: cover; background-image: url('<%= background_url %>')";></div>
      <h1 class="article-title" style="margin-top:100px;"> <%= @article.title %> </h1>
      <p style="font-size: 12px; float: right; color:#f6f6f6; font-weight:bold; margin-top: -240px;"><time datetime="2020-02-25">February 25th 2020</time></p>
      <p style="height:auto; width: 550px; margin-top: -200px;"> <%= @article.description %> </p>
      <div class="a2a_kit a2a_kit_size_32 a2a_default_style">
        <a class="a2a_button_facebook" style="margin:5px; opacity:0.8; float:right; bottom:0;"></a>
        <a class="a2a_button_twitter" style="margin:5px;opacity:0.8; float:right; bottom:0;"></a>
        <a class="a2a_button_linkedin" style="margin:5px;opacity:0.8; float:right; bottom:0;"></a>
        <a class="a2a_button_whatsapp" style="margin:5px;opacity:0.8; float:right; bottom:0;"></a>
      </div>
      <script async src="https://static.addtoany.com/menu/page.js"></script>
    </div>
  </div>

  <div>
    <% if policy(@project).update? %>
      <span class="create-article-3">      <%= link_to edit_project_article_path(@article) do %>
        <%= image_tag "https://res.cloudinary.com/dnizmljvi/image/upload/v1582802611/Sans_titre-1_kyhx7n.png"%>
        <% end %>
      </span>
    <% end %>
  </div>
  <div>
    <% if policy(@project).update? %>
      <span class="create-article-2">     <%= link_to new_project_article_path(@project) do %>
        <%= image_tag "https://res.cloudinary.com/dnizmljvi/image/upload/v1582730096/Articlenew_ffikjo.png"%>
        <% end %>
      </span>
    <% end %>
  </div>
  <div>
    <% if policy(@project).update? %>
      <span class="create-article-1" style="width:58px; height:58px;">     <%= link_to project_path(@project) do %>
        <%= image_tag "https://res.cloudinary.com/dnizmljvi/image/upload/v1582904861/arrow_mtgtu3.png"%>
        <% end %>
      </span>
    <% end %>
  </div>
</div>

<div>
</div>
