<div class="container">
  <%= link_to project_path(project), class: "card-link" do %>
<!-- image url has to change with the url of the profile pic -->
    <% if project.photo.attached? %>
      <% background_url = cl_image_path project.photo.key, width: 400, height: 500 %>
    <% else %>
      <% background_url = 'https://source.unsplash.com/500x400/?cocktail' %>
    <% end %>
    <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= background_url %>');">
      <div class="card-category"><i class="fa fa-usd" aria-hidden="true"></i></div>
        <h2><%= project.name %></h2>
      <div class="card-description" style="color: white" >
        <p><%= project.short_description %></p>
      </div>
      <% end %>
  </div>
</div>
