<!-- app/views/articles/show.html.erb -->
<% background_url = cl_image_path @project.photo.key, width: 200, height: 250 %>

<div class="square-cover" style="background-size: cover; background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= background_url %>');">


  <%= cl_image_tag @project.photo.key, width: 400, height: 300, crop: :fill %>
  <div> <%= @project.name %> </div>
  <div> <%= @project.short_description %> </div>
  <div> <%= @project.long_description %> </div>
  <p>Amount: <%= humanized_money_with_symbol(@project.price) %></p>
  <div>
    <%= form_tag donations_path do %>
      <%= hidden_field_tag 'project_id', @project.id %>
      <%= submit_tag 'Purchase', class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>



<div class="container test">

  <div class="page-header">
    <h1>Check Our Articles</h1>
  </div>

  <div class="row" style="justify-content: center">
    <div class="col-10">
      <div class="container test-2">
        <div class="row">
          <% @project.articles.each do |article| %>
            <%= render 'articles/card', article: article %>
          <% end %>
        </div>
    </div>
</div>

<div class="New-article">
    <%= link_to "Create A New Article", new_project_article_path(@project), class: "btn btn-danger btn-lg" %>
</div>
